{
  "compilerOptions": {
	"target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2020",
      "es2019",
      "es2018",
      "es2017",
      "es2016",
      "es2015"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
	  "src/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "__tests__"]
}
